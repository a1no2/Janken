<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="できるだけ負けろ！"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#000000" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="250px"
        android:id="@+id/tyoki_bt"
        android:src="@drawable/tyoki"
        android:layout_alignTop="@+id/gu_bt"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="250px"
        android:id="@+id/gu_bt"
        android:src="@drawable/gu"
        android:layout_below="@+id/batoru"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="250px"
        android:id="@+id/pa_bt"
        android:src="@drawable/pa"
        android:layout_alignTop="@+id/tyoki_bt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="250px"
        android:id="@+id/batoru"
        android:src="@drawable/muhon"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tyoki_bt"
        android:layout_alignStart="@+id/tyoki_bt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相手の手"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_above="@+id/batoru"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スタート"
        android:id="@+id/start_bt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="終了"
        android:id="@+id/end_bt"
        android:layout_alignTop="@+id/start_bt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
